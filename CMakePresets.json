{
    "version": 6,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 20,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "default",
        "displayName": "Default Config",
        "description": "Default build using Ninja generator",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/default",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
        }
      },
      {
        "name": "debug",
        "displayName": "Debug",
        "description": "Debug build with all warnings enabled",
        "inherits": "default",
        "binaryDir": "${sourceDir}/build/debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "ENABLE_WARNINGS": "ON",
          "ENABLE_TESTING": "ON"
        }
      },
      {
        "name": "release",
        "displayName": "Release",
        "description": "Optimized release build",
        "inherits": "default",
        "binaryDir": "${sourceDir}/build/release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "ENABLE_WARNINGS": "ON"
        }
      },
      {
        "name": "strict",
        "displayName": "Strict",
        "description": "Debug build with warnings as errors",
        "inherits": "debug",
        "binaryDir": "${sourceDir}/build/strict",
        "cacheVariables": {
          "ENABLE_WERROR": "ON"
        }
      },
      {
        "name": "asan",
        "displayName": "Address Sanitizer",
        "description": "Debug build with Address Sanitizer enabled",
        "inherits": "debug",
        "binaryDir": "${sourceDir}/build/asan",
        "cacheVariables": {
          "ENABLE_SANITIZER_ADDRESS": "ON"
        }
      },
      {
        "name": "ubsan",
        "displayName": "UB Sanitizer",
        "description": "Debug build with Undefined Behavior Sanitizer enabled",
        "inherits": "debug",
        "binaryDir": "${sourceDir}/build/ubsan",
        "cacheVariables": {
          "ENABLE_SANITIZER_UNDEFINED": "ON"
        }
      },
      {
        "name": "tsan",
        "displayName": "Thread Sanitizer",
        "description": "Debug build with Thread Sanitizer enabled",
        "inherits": "debug",
        "binaryDir": "${sourceDir}/build/tsan",
        "cacheVariables": {
          "ENABLE_SANITIZER_THREAD": "ON"
        }
      },
      {
        "name": "ci",
        "displayName": "CI",
        "description": "Configuration for Continuous Integration",
        "inherits": "strict",
        "binaryDir": "${sourceDir}/build/ci",
        "cacheVariables": {
          "ENABLE_TESTING": "ON"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default",
        "configurePreset": "default"
      },
      {
        "name": "debug",
        "configurePreset": "debug",
        "configuration": "Debug"
      },
      {
        "name": "release",
        "configurePreset": "release",
        "configuration": "Release"
      },
      {
        "name": "strict",
        "configurePreset": "strict",
        "configuration": "Debug"
      },
      {
        "name": "asan",
        "configurePreset": "asan",
        "configuration": "Debug"
      },
      {
        "name": "ubsan",
        "configurePreset": "ubsan",
        "configuration": "Debug"
      },
      {
        "name": "tsan",
        "configurePreset": "tsan",
        "configuration": "Debug"
      },
      {
        "name": "ci",
        "configurePreset": "ci",
        "configuration": "Debug"
      }
    ],
    "testPresets": [
      {
        "name": "default",
        "configurePreset": "default",
        "output": {
          "outputOnFailure": true
        },
        "execution": {
          "noTestsAction": "error",
          "stopOnFailure": false
        }
      },
      {
        "name": "ci",
        "configurePreset": "ci",
        "output": {
          "outputOnFailure": true
        },
        "execution": {
          "noTestsAction": "error",
          "stopOnFailure": true
        }
      }
    ]
  }